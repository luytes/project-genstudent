<div class="container space-nav">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-md-8 col-sm-offset-1 col-md-offset-2">
      <div class="profile-form">
        <div class="row">
          <div class="col-lg-12 profile-form-header text-center">
            <h2>Edit Service</h2>
          </div>
        </div>
        <%= simple_form_for(@service) do |f| %>
        <div class="col-xs-12 margin-top-5">
          <p>
          <%= f.text_field :title, placeholder: 'Title', label:false, style: "width: 100%" %>
          </p>
        </div>
        <div class="col-xs-12 margin-top-5">
          <p>
          <%= f.input :description, placeholder: 'Description', label:false,
          :input_html => { id: "no-resize" } %>
          </p>
        </div>
        <div class="col-xs-12 margin-top-5">
          <p>
          <%= f.input :category, collection: Survey.categories, label: false,
          include_blank: "Select a category", :input_html => { id: 'normal', :onchange => "changeSelect(this)" } %>
          </p>
        </div>
        <div class="col-xs-12 margin-top-5">
          <p>
          <%= f.input :what_i_will_do_for_you, placeholder: 'What I will do for you', label:false %>
          </p>
        </div>
        <div class="col-xs-12 margin-top-5">
          <p>
          <%= f.input :what_i_need_from_you, placeholder: 'What I need from you', label:false %>
          </p>
        </div>
        <div class="col-xs-12 margin-top-5">
          <p>
          <%= f.text_field :price_pennies, placeholder: 'Price', label:false %> GBP
          </p>
        </div>
        <div class="col-xs-12 margin-top-5 text-center">
          <p>
          <%= f.button :submit, "Update Service", class: "btn btn-primary" %>
          </p>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
