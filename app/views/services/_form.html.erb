<div class="row">
  <div class="col-xs-12 col-sm-10 col-md-8 col-sm-offset-1 col-md-offset-2">
    <div class="profile-form">
      <div class="row">
        <div class="col-lg-12 profile-form-header">
          <h2>Edit Service</h2>
        </div>
      </div>
      <%= simple_form_for(@student) do |f| %>
        <%= f.text_field :title, placeholder: 'title', label:false %>

        <%= f.text_area :description, placeholder: 'description', label:false %>

        <%= f.text_field :category, placeholder: 'category', label:false %>

        <%= f.text_field :rating, placeholder: 'rating', label:false %>

        <%= f.input :student_picture, class: "space-auto", label: "Add a student picture"%>

        <%= f.button :submit, "update service", class: "btn" %>
      <% end %>

    </div>
  </div>
</div>
