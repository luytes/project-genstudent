<div class="container space-nav">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-md-8 col-sm-offset-1 col-md-offset-2">
      <div class="profile-form">
        <div class="row">
          <div class="col-lg-12 profile-form-header text-center">
            <h2>Edit Student</h2>
          </div>
        </div>
        <%= simple_form_for(@student) do |f| %>
        <div class="col-xs-12 margin-top-5">
          <p>
          <%= f.label :first_name, 'First Name' %><%= f.text_field :first_name, placeholder: 'Chemi first', label:false, style: "width: 100%" %>
          </p>
        </div>
        <div class="col-xs-12 margin-top-5">
          <p>
          <%= f.label :last_name, 'Last Name' %><%= f.text_field :last_name, placeholder: 'Chemi last', label:false, style: "width: 100%" %>
          </p>
        </div>
        <div class="col-xs-12 margin-top-5">
          <p>
          <%= f.label :email, 'Email' %><%= f.text_field :email, placeholder: 'Chemi email', label:false, style: "width: 100%" %>
          </p>
        </div>
        <div class="col-xs-12 margin-top-5">
          <p>
          <%= f.input :student_picture, class: "space-auto", label: "Add a student picture", style: "width: 100%"%>
          </p>
        </div>
        <div class="col-xs-12 margin-top-5">
          <p>
          <%= f.label :introduction, 'Description' %><%= f.input :introduction, as: :text, :input_html => { id: 'descr', class: 'test', :cols => 10, :rows => 5 }, label:false, style: "width: 100%" %>
          </p>
        </div>
        <div class="col-xs-12 margin-top-5">
          <p>
          <%= f.label :university, 'University' %><%= f.text_field :university, required: true, placeholder: "Chemi University", label:false, style: "width: 100%" %>
          </p>
        </div>
        <div class="col-xs-12 margin-top-5">
          <p>
          <%= f.label :subject, 'Subject' %><%= f.text_field :subject, required: true, placeholder: "Mechanical Engineering", label:false, style: "width: 100%" %>
          </p>
        </div>
        <div class="col-xs-12 margin-top-5">
          <p>
          <%= f.label :degree, 'Degree' %><%= f.text_field :degree, required: true, placeholder: "Bachelor of ...", label:false, style: "width: 100%" %>
          </p>
        </div>
        <div class="col-xs-12 margin-top-5">
          <p>
          <%= f.label :year, 'Year' %><%= f.text_field :year, required: true, placeholder: "2012", label:false, style: "width: 100%" %>
          </p>
        </div>
        <div class="col-xs-12 margin-top-5 text-center">
          <p>
          <%= f.button :submit, "Update Student", class: "btn btn-primary" %>
          </p>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
